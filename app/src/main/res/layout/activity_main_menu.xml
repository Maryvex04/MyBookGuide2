<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <SearchView
        android:id="@+id/sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="57dp"
        app:layout_constraintBottom_toTopOf="@+id/bttn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttn"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="64dp"
        android:text="all books"
        app:layout_constraintBaseline_toBaselineOf="@+id/bttn2"
        app:layout_constraintEnd_toStartOf="@+id/bttn2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bttn2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="573dp"
        android:text="reading list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bttn"
        app:layout_constraintTop_toBottomOf="@+id/sv" />

</androidx.constraintlayout.widget.ConstraintLayout>